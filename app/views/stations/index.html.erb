<h1>List of stations</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @stations.each do |station| %>
    <tr>
      <td><%= station.name %></td>
      <td><%= link_to "Show", station %></td>
      <td><%= link_to "Edit", edit_station_path(station) %></td>
      <td><%= link_to "Delete", station, method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end  %>
  </tbody>
</table>

<br>

<%= link_to "Add train", new_station_path %>