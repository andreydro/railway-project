<h1>List of stations</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @stations.each do |station| %>
    <tr>
      <td>
        <div id="station_title_<%= station.id %>">
          <%= station.title %>
        </div>
        <%= render "form", station: station, hidden: true %>
      </td>
      <td><%= link_to "Show", [:admin, station] %></td>
      <td><%= link_to "Edit", '', class: 'edit_station', data: { station_id: :station_id } %></td>
      <td><%= link_to "Delete", [:admin, station], method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end  %>
  </tbody>
</table>

<br>

<%= link_to t('commom.create_new_station'), new_admin_station_path %>