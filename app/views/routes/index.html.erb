<h1>List of routes</h1>

<table>
  <thead>
  <tr>
    <th>Number</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
      <tr>
        <td><%= route.number %></td>
        <td><%= link_to "Show", route %></td>
        <td><%= link_to "Edit", edit_route_path(route) %></td>
        <td><%= link_to "Delete", route, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
  <% end  %>
  </tbody>
</table>

<br>

<%= link_to "Add train", new_route_path %>